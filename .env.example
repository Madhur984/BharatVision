# BharatVision Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===== Application Settings =====
APP_NAME=BharatVision
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ===== Security Settings =====
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== CORS Settings =====
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com

# ===== Database Settings =====
DATABASE_URL=sqlite:///./bharatvision.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/bharatvision

# ===== API Settings =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RATE_LIMIT=100/minute

# ===== ML/AI Settings =====
DEVICE=cuda  # Options: cuda, cpu, auto
HF_MODEL_NAME=google/flan-t5-base
SURYA_LANG_CODES=en,hi
MODEL_CACHE_DIR=./models

# ===== OCR Settings =====
USE_YOLO_FOR_TEXT_DETECTION=False
DETECTION_CONFIDENCE_THRESHOLD=0.4
YOLO_MODEL_PATH=./yolov8n.pt

# ===== Camera Settings =====
CAMERA_INDEX=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# ===== E-commerce Scraper Settings =====
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3

# ===== Cloud Storage (Optional) =====
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=bharatvision-images
# AWS_REGION=ap-south-1

# ===== Monitoring & Logging =====
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# ===== Email Settings (Optional) =====
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@bharatvision.com