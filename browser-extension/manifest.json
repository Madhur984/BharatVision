{
    "manifest_version": 3,
    "name": "BharatVision Compliance Checker",
    "version": "1.0.0",
    "description": "Validate product listings for Legal Metrology compliance on e-commerce platforms",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.amazon.in/*",
        "https://*.flipkart.com/*",
        "https://*.meesho.com/*",
        "https://*.jiomart.com/*",
        "https://*.myntra.com/*",
        "https://*.shopify.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.in/*",
                "https://*.flipkart.com/*",
                "https://*.meesho.com/*",
                "https://*.jiomart.com/*",
                "https://*.myntra.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}